extends layout

block carousel

  - var data = data || [{}]

  if errors
    ul.my-errors
      for error in errors
        li= error.msg

  h1(class="text-success")
    br
    p= `Auteur: ${data.author}`
    br
    figure
      img(src=data.body, alt="photo Ã  editer")
      figcaption= data.title
    a(href=`/edit/${data.id}`)
      button(class="text-secondary") Modifier
    form(method="delete", action="/image/delete")
       input(value=data.id, name="id", hidden=true)
       button(class="text-danger", type="submit") Supprimer

